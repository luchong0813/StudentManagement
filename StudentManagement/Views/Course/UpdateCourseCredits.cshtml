@{
    ViewBag.Title = "修改学分";
}

<h2>修改学分</h2>
@if (ViewBag.RowsAffected == null)
{
    <form asp-action="UpdateCourseCredits">
        <div class="form-group row">
            <label for="multiplier" class="col-sm-2 col-form-label">系数：</label>
            <div class="col-sm-8">
                <input type="number" id="multiplier" name="multiplier" class="form-control" placeholder="请输入学分系数" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" value="创建" class="btn btn-primary" />
            </div>
        </div>
    </form>
}
@if (ViewBag.RowsAffected != null)
{
    <p>更新了 @ViewBag.RowsAffected 门课程信息的学分</p>
}
<div class="form-group row">
    <div class="col-sm-10">
        <a class="btn btn-info" asp-action="Index">返回</a>
    </div>
</div>
