@model Department
@{ 
    ViewBag.Title = "学院详情";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-6">
        <div class="card bg-light mb-3" style="max-width:18rem;">
            <div class="card-header">
                <h3 class="text-center">@Model.Name</h3>
            </div>

            <div class="card-body text-center">
                <h5 class="card-title">
                    @Html.DisplayNameFor(c => c.Name)：@Model.Name
                </h5>
                <h5 class="card-title">
                    @Html.DisplayNameFor(c => c.StartDate)：@Html.DisplayFor(c=>c.StartDate)
                </h5>

                <h5 class="card-title">
                    @Html.DisplayNameFor(c => c.Budget)：@Html.DisplayFor(c=>c.Budget)
                </h5>

                <h5 class="card-title">
                    @Html.DisplayNameFor(c => c.TeacherId)：@Model.Administrator.Name
            </div>

            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-info">返回</a>
                <a asp-action="Edit" asp-route-id="@Model.DepartmentId" class="btn btn-primary">编辑</a>
            </div>
        </div>
    </div>
</div>