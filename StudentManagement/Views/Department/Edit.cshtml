@model StudentManagement.ViewModel.Department.DepartmentCreateViewModel
@{ 
    ViewBag.Title = "编辑学院信息";
}

<form class="mt-3" method="post" asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="DepartmentId" />
    <input type="hidden" asp-for="RowVersion" />


    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="DepartmentId"></label>
        <div class="col-sm-10">
            <input class="form-control" disabled asp-for="DepartmentId" />
            <input type="hidden" asp-for="DepartmentId" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" placeholder="请输入学院名称" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="StartDate"></label>
        <div class="col-sm-10">
            <input class="form-control" type="date" asp-for="StartDate" placeholder="请输入成立时间" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Budget"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Budget" placeholder="请输入预算" />
            <span asp-validation-for="Budget" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="TeacherList"></label>
        <div class="col-sm-10">
            <select asp-for="TeacherId"
                    asp-items="@Model.TeacherList"
                    class="custom-select mr-sm-2">
                <option value="">请选择</option>
            </select>
            <span asp-validation-for="TeacherList" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">更新</button>
            <a asp-action="Index" class="btn btn-light">取消</a>
        </div>
    </div>
</form>