@model IEnumerable<Student>

@{
    ViewBag.Title = "首页";
}

<div class="card-deck">
    @foreach (var student in Model)
    {
        var phontPatn = $"~/images/{(student.Photo ?? "abc.jpg")}";
        <div class="card m-3">
            <div class="card-header">
                <h3>@student.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src=@phontPatn asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="details" asp-route-id="@student.Id" class="btn btn-primary m-1">查看</a>
                <a href="#" class="btn btn-primary m-1">编辑</a>
                <a href="#" class="btn btn-danger m-1">删除</a>
            </div>
        </div>
    }
</div>

@section Scripts{
}
