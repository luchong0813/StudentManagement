@using StudentManagement.Application.Students.Dtos
@model IEnumerable<EnrollmentDateGroupDto>

@{ 
    ViewBag.Title = "学生信息统计";
}

<h1>学生信息统计</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>入学时间</th>
            <th>学生人数</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <th>@Html.DisplayFor(modelitem=>item.EnrollmentDate)</th>
            <th>@item.StudentCount</th>
        </tr>
    }
</table>