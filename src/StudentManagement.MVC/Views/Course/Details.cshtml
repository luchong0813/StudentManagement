@model Course
@{ 
    ViewBag.Title = "课程详情";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-6">
        <div class="card bg-light mb-3" style="max-width:18rem;">
            <div class="card-header">
                <h3>@Model.Title</h3>
            </div>

            <div class="card-body text-center">
                <h5 class="card-title">
                    @Html.DisplayNameFor(c => c.Title)：@Model.Title
                </h5>
                <h5 class="card-title">
                    @Html.DisplayNameFor(c => c.CourseId)：@Model.CourseId
                </h5>

                <h5 class="card-title">
                    @Html.DisplayNameFor(c => c.DepartmentId)：@Model.Department.Name
                </h5>

                <h5 class="card-title">
                    @Html.DisplayNameFor(c => c.Credits)：@Model.Credits
                </h5>
            </div>

            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-info">返回</a>
                <a asp-action="Edit" asp-route-courseId="@Model.CourseId" class="btn btn-primary">编辑</a>
            </div>
        </div>
    </div>
</div>